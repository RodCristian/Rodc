<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane xmlns="http://javafx.com/javafx/23.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="main.ui.OficinaController"
            prefWidth="600" prefHeight="400" styleClass="fondo-oficina">
    <children>
        <VBox spacing="18" alignment="TOP_CENTER" prefWidth="560" prefHeight="380"
              AnchorPane.topAnchor="10" AnchorPane.leftAnchor="20" AnchorPane.rightAnchor="20" AnchorPane.bottomAnchor="10"
              styleClass="panel-blanco">
            <padding>
                <Insets top="18" right="18" bottom="18" left="18"/>
            </padding>
            <!-- TÃ­tulo destacado -->
            <Label text="OFICINA" style="-fx-font-size: 28px; -fx-font-weight: bold; -fx-text-fill: #ff6c37;"/>
            
            <!-- Fila de filtros y botones -->
            <HBox spacing="14" alignment="CENTER_LEFT">
                <Label text="Filtrar por Producto:" style="-fx-font-size: 15px; -fx-text-fill: #23272f;"/>
                <ComboBox fx:id="productoComboBox" prefWidth="180"/>
                <Button text="Filtrar" prefWidth="90" onAction="#buscarStock"/>
                <Button text="Mostrar Todo" prefWidth="150" onAction="#mostrarTodo"/>
            </HBox>
            
            <!-- Tabla de productos -->
            <TableView fx:id="tableView" prefHeight="220" minWidth="350" maxWidth="520">
                <columns>
                    <TableColumn fx:id="nombreColumn" text="Nombre" prefWidth="320"/>
                    <TableColumn fx:id="cantidadColumn" text="Cantidad" prefWidth="180"/>
                </columns>
            </TableView>
        </VBox>
    </children>
</AnchorPane>

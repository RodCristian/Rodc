<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<BorderPane xmlns="http://javafx.com/javafx/23.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="main.ui.InventarioController"
            prefWidth="800.0" prefHeight="600.0">

    <!-- Título superior -->
    <top>
        <HBox style="-fx-background-color: #34495e; -fx-padding: 10;">
            <Text fx:id="txtTitulo" text="Inventario" fill="white">
                <font>
                    <Font size="20.0"/>
                </font>
            </Text>
        </HBox>
    </top>

    <!-- Menú lateral -->
    <left>
        <VBox spacing="10" style="-fx-background-color: #2c3e50; -fx-padding: 15;">
            <Button text="Oficina" onAction="#mostrarOficina"
                    style="-fx-background-color: #1abc9c; -fx-text-fill: white;"/>
            <Button text="Planta" onAction="#mostrarPlanta"
                    style="-fx-background-color: #e67e22; -fx-text-fill: white;"/>
        </VBox>
    </left>

    <!-- Contenido dinámico -->
    <center>
        <StackPane fx:id="contenidoPane" style="-fx-background-color: #ecf0f1;">
            <!-- Aquí se cargan las vistas oficina/planta -->
        </StackPane>
    </center>

</BorderPane>

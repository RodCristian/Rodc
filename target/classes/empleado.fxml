<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane xmlns:fx="http://javafx.com/fxml" fx:controller="main.ui.EmpleadoController">
    <children>
        <VBox spacing="20" layoutX="14.0" layoutY="14.0" AnchorPane.topAnchor="0" AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0" AnchorPane.bottomAnchor="0">
            <!-- Formulario -->
            <GridPane hgap="10.0" vgap="8.0">
                <padding>
                    <Insets top="20" right="20" bottom="20" left="20"/>
                </padding>

                <Label text="Nuevo Empleado" GridPane.columnSpan="2" style="-fx-font-size: 18px; -fx-font-weight: bold;" />

                <Label text="RUT:" GridPane.rowIndex="1" />
                <TextField fx:id="txtRut" GridPane.rowIndex="1" GridPane.columnIndex="1" />

                <Label text="Nombre:" GridPane.rowIndex="2" />
                <TextField fx:id="txtNombre" GridPane.rowIndex="2" GridPane.columnIndex="1" />

                <Label text="Apellido:" GridPane.rowIndex="3" />
                <TextField fx:id="txtApellido" GridPane.rowIndex="3" GridPane.columnIndex="1" />

                <Label text="Fecha de ingreso:" GridPane.rowIndex="4" />
                <DatePicker fx:id="dpFechaIngreso" GridPane.rowIndex="4" GridPane.columnIndex="1" />

                <Label text="Cargo:" GridPane.rowIndex="5" />
                <TextField fx:id="txtCargo" GridPane.rowIndex="5" GridPane.columnIndex="1" />

                <Label text="Sueldo base:" GridPane.rowIndex="6" />
                <TextField fx:id="txtSueldoBase" GridPane.rowIndex="6" GridPane.columnIndex="1" />

                <Label text="AFP:" GridPane.rowIndex="7" />
                <ComboBox fx:id="cmbAfp" GridPane.rowIndex="7" GridPane.columnIndex="1" />

                <Label text="Fonasa/Isapre:" GridPane.rowIndex="8" />
                <ComboBox fx:id="cmbFonasa" GridPane.rowIndex="8" GridPane.columnIndex="1" />

                <Label text="Categoría:" GridPane.rowIndex="9" />
                <TextField fx:id="txtCategoria" GridPane.rowIndex="9" GridPane.columnIndex="1" />

                <Label text="Estado:" GridPane.rowIndex="10" />
                <ComboBox fx:id="cmbEstado" GridPane.rowIndex="10" GridPane.columnIndex="1" />

                <Button text="Guardar" onAction="#guardarEmpleado"
                        GridPane.rowIndex="11" GridPane.columnSpan="2"
                        prefWidth="200" style="-fx-font-size: 14px; -fx-font-weight: bold;" />

                <Button text="Refrescar" onAction="#refrescarTabla"
                        GridPane.rowIndex="12" GridPane.columnSpan="2"
                        prefWidth="200" style="-fx-font-size: 14px;" />

                <!-- Botón Eliminar -->
                <Button text="Eliminar" onAction="#eliminarEmpleado"
                        GridPane.rowIndex="13" GridPane.columnSpan="2"
                        prefWidth="200" style="-fx-font-size: 14px; -fx-background-color: #e57373; -fx-text-fill: white;" />

                <!-- Buscar por RUT -->
                <Label text="Buscar por RUT:" GridPane.rowIndex="14" />
                <TextField fx:id="txtBuscarRut" GridPane.rowIndex="14" GridPane.columnIndex="1" />

                <Button text="Buscar" onAction="#buscarPorRut"
                        GridPane.rowIndex="15" GridPane.columnSpan="2"
                        prefWidth="200" style="-fx-font-size: 14px;" />
            </GridPane>

            <!-- Tabla de empleados -->
            <TableView fx:id="tablaEmpleados" prefHeight="250" prefWidth="800">
                <columns>
                    <TableColumn fx:id="colRut" text="RUT"/>
                    <TableColumn fx:id="colNombre" text="Nombre"/>
                    <TableColumn fx:id="colApellido" text="Apellido"/>
                    <TableColumn fx:id="colFechaIngreso" text="Fecha Ingreso"/>
                    <TableColumn fx:id="colCargo" text="Cargo"/>
                    <TableColumn fx:id="colSueldoBase" text="Sueldo Base"/>
                    <TableColumn fx:id="colAfp" text="AFP"/>
                    <TableColumn fx:id="colFonasa" text="Fonasa"/>
                    <TableColumn fx:id="colCategoria" text="Categoría"/>
                    <TableColumn fx:id="colEstado" text="Estado"/>
                </columns>
            </TableView>
        </VBox>
    </children>
</AnchorPane>
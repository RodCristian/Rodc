<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane xmlns="http://javafx.com/javafx/23.0.1" 
            xmlns:fx="http://javafx.com/fxml/1" 
            fx:controller="main.ui.OficinaController" 
            prefWidth="600" prefHeight="400" style="-fx-background-color: #ffc0cb;">

    <!-- Título -->
    <Label text="OFICINA" layoutX="230" layoutY="15" prefHeight="40" prefWidth="150">
        <font>
            <Font size="20"/>
        </font>
    </Label>

    <!-- Etiqueta para ComboBox -->
    <Label text="Filtrar por Producto:" layoutX="30" layoutY="70" />

    <!-- ComboBox para seleccionar producto -->
    <ComboBox fx:id="productoComboBox" layoutX="150" layoutY="65" prefWidth="200"/>

    <!-- Botón Filtrar -->
    <Button text="Filtrar" layoutX="370" layoutY="65" prefWidth="80" onAction="#buscarStock"/>

    <!-- Botón Mostrar Todo -->
    <Button text="Mostrar Todo" layoutX="460" layoutY="65" prefWidth="110" onAction="#mostrarTodo"/>

    <!-- Tabla para mostrar productos -->
    <TableView fx:id="tableView" layoutX="30" layoutY="120" prefWidth="540" prefHeight="250">
        <columns>
            <TableColumn fx:id="nombreColumn" text="Nombre" prefWidth="350"/>
            <TableColumn fx:id="cantidadColumn" text="Cantidad" prefWidth="180"/>
        </columns>
    </TableView>

</AnchorPane>

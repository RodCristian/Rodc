<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.Insets?>

<AnchorPane xmlns:fx="http://javafx.com/fxml" fx:controller="main.ui.LiquidacionController">
    <children>
        <VBox spacing="20" style="-fx-background-color: #f4f4f4;" layoutX="14.0" layoutY="14.0" AnchorPane.topAnchor="0" AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0" AnchorPane.bottomAnchor="0">
            <padding>
                <Insets top="20" right="20" bottom="20" left="20"/>
            </padding>
            <HBox spacing="10">
                <Label text="Empleado:"/>
                <ComboBox fx:id="cmbEmpleado" prefWidth="200"/>
                <Label text="Mes:"/>
                <TextField fx:id="txtMes" promptText="YYYY-MM" prefWidth="100"/>
                <Label text="Descuentos:"/>
                <TextField fx:id="txtDescuentos" promptText="0.0" prefWidth="80"/>
                <Button text="Generar Liquidación" onAction="#generarLiquidacion"/>
            </HBox>

            <TableView fx:id="tablaLiquidaciones" prefHeight="250">
                <columns>
                    <TableColumn fx:id="colMes" text="Mes"/>
                    <TableColumn fx:id="colSueldoBase" text="Sueldo Base"/>
                    <TableColumn fx:id="colTotalHoras" text="Horas"/>
                    <TableColumn fx:id="colBonificaciones" text="Bonificaciones"/>
                    <TableColumn fx:id="colDescuentos" text="Descuentos"/>
                    <TableColumn fx:id="colSueldoLiquido" text="Sueldo Líquido"/>
                    <TableColumn fx:id="colFechaGeneracion" text="Fecha Generación"/>
                </columns>
            </TableView>

            <Button text="Exportar a PDF" onAction="#exportarPDF" prefWidth="200"/>
        </VBox>
    </children>
</AnchorPane>
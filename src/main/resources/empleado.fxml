            <AnchorPane prefWidth="800" prefHeight="220">
                <children>
                    <Label text="Cargo:" layoutX="30" layoutY="30"/>
                    <TextField fx:id="txtCargo" layoutX="150" layoutY="25" prefWidth="200"/>

                    <Label text="Sueldo base:" layoutX="400" layoutY="30"/>

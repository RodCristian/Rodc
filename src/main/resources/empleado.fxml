                    <Label text="Nombre:" layoutX="400" layoutY="30"/>
                    <TextField fx:id="txtNombre" layoutX="500" layoutY="25" prefWidth="200"/>

                    <Label text="Apellido:" layoutX="30" layoutY="80"/>

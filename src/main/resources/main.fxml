<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.text.Text?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.shape.Rectangle?>

<BorderPane fx:id="rootPane" xmlns:fx="http://javafx.com/fxml" fx:controller="main.ui.MainController"
            prefWidth="1000.0" prefHeight="700.0" style="-fx-background-color: #ffffff;">

    <top>
        <HBox spacing="10" style="-fx-background-color: #2c3e50;">
            <padding>
                <Insets top="10" right="10" bottom="10" left="10"/>
            </padding>
            <Button text="Inicio" onAction="#mostrarDashboard"
                    style="-fx-background-color: transparent; -fx-text-fill: white; -fx-font-size: 14px; -fx-font-weight: bold;"/>
            <Button text="Empleados" onAction="#mostrarEmpleados"
                    style="-fx-background-color: transparent; -fx-text-fill: white; -fx-font-size: 14px;"/>
            <Button text="Liquidaciones" onAction="#mostrarLiquidaciones"
                    style="-fx-background-color: transparent; -fx-text-fill: white; -fx-font-size: 14px;"/>
            <Button text="Asistencia" onAction="#mostrarAsistencia"
                    style="-fx-background-color: transparent; -fx-text-fill: white; -fx-font-size: 14px;"/>
        </HBox>
    </top>

    <center>
        <StackPane fx:id="contenidoPane" style="-fx-background-color: #ecf0f1;">
            <GridPane fx:id="dashboardGridPane" alignment="CENTER" hgap="50" vgap="50">
                <padding>
                    <Insets top="50" right="50" bottom="50" left="50"/>
                </padding>

                <VBox alignment="CENTER" styleClass="card-panel" onMouseClicked="#mostrarEmpleados" GridPane.rowIndex="0" GridPane.columnIndex="0">
                    <style>
                        -fx-background-color: #ffffff;
                        -fx-background-radius: 10;
                        -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.2), 10, 0, 0, 5);
                        -fx-padding: 20;
                    </style>
                    <ImageView fitWidth="80" fitHeight="80" pickOnBounds="true" preserveRatio="true">
                        <image>
                            <Image url="/images/empleado.png" />
                        </image>
                    </ImageView>
                    <Label text="Gestión de Empleados" style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;">
                        <VBox.margin>
                            <Insets top="15"/>
                        </VBox.margin>
                    </Label>
                    <Label text="Agrega, edita y gestiona la información de tus empleados." wrapText="true" style="-fx-font-size: 12px; -fx-text-fill: #7f8c8d;" alignment="CENTER">
                        <VBox.margin>
                            <Insets top="5"/>
                        </VBox.margin>
                    </Label>
                    <Button text="Ir a Empleados" onAction="#mostrarEmpleados"
                            style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-font-size: 14px; -fx-padding: 8 20; -fx-background-radius: 5;">
                        <VBox.margin>
                            <Insets top="20"/>
                        </VBox.margin>
                    </Button>
                </VBox>

                <VBox alignment="CENTER" styleClass="card-panel" onMouseClicked="#mostrarLiquidaciones" GridPane.rowIndex="0" GridPane.columnIndex="1">
                    <style>
                        -fx-background-color: #ffffff;
                        -fx-background-radius: 10;
                        -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.2), 10, 0, 0, 5);
                        -fx-padding: 20;
                    </style>
                    <ImageView fitWidth="80" fitHeight="80" pickOnBounds="true" preserveRatio="true">
                        <image>
                            <Image url="/images/liquidacion.png" />
                        </image>
                    </ImageView>
                    <Label text="Generar Liquidaciones" style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;">
                        <VBox.margin>
                            <Insets top="15"/>
                        </VBox.margin>
                    </Label>
                    <Label text="Calcula y genera las liquidaciones de sueldo de forma sencilla." wrapText="true" style="-fx-font-size: 12px; -fx-text-fill: #7f8c8d;" alignment="CENTER">
                        <VBox.margin>
                            <Insets top="5"/>
                        </VBox.margin>
                    </Label>
                    <Button text="Ir a Liquidaciones" onAction="#mostrarLiquidaciones"
                            style="-fx-background-color: #e67e22; -fx-text-fill: white; -fx-font-size: 14px; -fx-padding: 8 20; -fx-background-radius: 5;">
                        <VBox.margin>
                            <Insets top="20"/>
                        </VBox.margin>
                    </Button>
                </VBox>

                <VBox alignment="CENTER" styleClass="card-panel" onMouseClicked="#mostrarAsistencia" GridPane.rowIndex="1" GridPane.columnIndex="0">
                    <style>
                        -fx-background-color: #ffffff;
                        -fx-background-radius: 10;
                        -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.2), 10, 0, 0, 5);
                        -fx-padding: 20;
                    </style>
                    <ImageView fitWidth="80" fitHeight="80" pickOnBounds="true" preserveRatio="true">
                        <image>
                            <Image url="/images/asistencia.png" />
                        </image>
                    </ImageView>
                    <Label text="Gestión de Asistencia" style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;">
                        <VBox.margin>
                            <Insets top="15"/>
                        </VBox.margin>
                    </Label>
                    <Label text="Visualiza y modifica los registros de asistencia de los empleados." wrapText="true" style="-fx-font-size: 12px; -fx-text-fill: #7f8c8d;" alignment="CENTER">
                        <VBox.margin>
                            <Insets top="5"/>
                        </VBox.margin>
                    </Label>
                    <Button text="Ir a Asistencia" onAction="#mostrarAsistencia"
                            style="-fx-background-color: #27ae60; -fx-text-fill: white; -fx-font-size: 14px; -fx-padding: 8 20; -fx-background-radius: 5;">
                        <VBox.margin>
                            <Insets top="20"/>
                        </VBox.margin>
                    </Button>
                </VBox>

                <VBox alignment="CENTER" spacing="10" GridPane.rowIndex="1" GridPane.columnIndex="1">
                    <ImageView fitWidth="150" fitHeight="150" preserveRatio="true">
                        <image>
                            <Image url="/images/logo3.png" />
                        </image>
                    </ImageView>
                    <Label text="Sistema RODC" style="-fx-font-size: 20px; -fx-text-fill: #2c3e50; -fx-font-weight: bold;" />
                </VBox>

            </GridPane>
        </StackPane>
    </center>
</BorderPane>
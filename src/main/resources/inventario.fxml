<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>

<BorderPane xmlns="http://javafx.com/javafx/23.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="main.ui.InventarioController"
            prefWidth="800.0" prefHeight="600.0"
            styleClass="root">

    <!-- Título superior -->
    <top>
        <HBox styleClass="top-bar-inventario">
            <Text fx:id="txtTitulo" text="Inventario" fill="white" >
                <font>
                    <Font size="20.0"/>
                </font>
            </Text>
        </HBox>
    </top>

    <!-- Menú lateral -->
    <left>
        <VBox spacing="10" styleClass="barra-lateral">
            <Button text="Oficina" onAction="#mostrarOficina"
                    styleClass="button"/>
            <Button text="Planta" onAction="#mostrarPlanta"
                    styleClass="button"/>
        </VBox>
    </left>

    <!-- Contenido dinámico -->
    <center>
        <StackPane fx:id="contenidoPane" styleClass="contenidoPane1">
            <!-- Aquí se cargan las vistas oficina/planta -->
                <ImageView fitWidth="500" fitHeight="500" pickOnBounds="true" preserveRatio="true">
                        <image>
                            <Image url="/images/logo3.png" />
                        </image>
                    </ImageView>
        </StackPane>
    </center>

</BorderPane>
